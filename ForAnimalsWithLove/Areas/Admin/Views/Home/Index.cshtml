@using ForAnimalsWithLove.Data.Service.Interfaces;
@using ForAnimalsWithLove.Infrastructure.Extensions;
@inject IAdminService AdminService
@{
	bool isAdmin = await AdminService.AdminExistByUserIdAsync(this.User.GetId()!);
	var admin = await AdminService.GetAdminExistByUserIdAsync(this.User.GetId()!);

}
@{
	var name = "";
	if(isAdmin)
	{
		name = admin.FirstName;
	}
}
@{
	ViewData["Title"] = "Home Page";
}
<div class="mt-4 p-5 bg-light text-center">
	<h2 class="display-4">Здравей, @name!</h2>
	<p class="lead mb-1 mt-3">
		Това е вашата администраторска част от тук може <b>четете</b>, <b>създавате</b>,
		<b>триете</b> и <b>променяте</b> клиенти, доктори и треньори.
	</p>
	<p class="lead mt-1">
		Също така може да видите <b>всички клиенти, лекари</b> и <b>треньори</b> в системата.
	</p>
	<hr class="my-3">
	<a asp-area="" asp-controller="Administrator" asp-action="AllAnimalsFiltred"
	class="btn btn-primary btn-lg">Всички животни</a>
	<a asp-area="" asp-controller="Administrator" asp-action="AllDoctors"
	class="btn btn-primary btn-lg">Всички лекари</a>
	<a asp-area="" asp-controller="Administrator" asp-action="AllTrainers"
	class="btn btn-primary btn-lg">Всички треньори</a>
	<br/>
	<a asp-area="Admin" asp-controller="Administrator" asp-action="AddAnimal"
	class="btn btn-primary btn-lg">Добави животно</a>
	<a asp-area="Admin" asp-controller="Administrator" asp-action="AddDoctor"
	class="btn btn-primary btn-lg">Добави лекар</a>
	<a asp-area="Admin" asp-controller="Administrator" asp-action="AddTrainer"
	class="btn btn-primary btn-lg">Добави треньор</a>
</div>