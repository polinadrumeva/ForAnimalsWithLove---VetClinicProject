@page
@model LoginModel


<head>
    <style>
        .col-lg-4 {
            text-align: center;
        }

    </style>
    <script type="text/javascript" src="https://www.google.com/recaptcha/api.js"></script>
    <script>
        function recaptchaCallback() {
            var response = grecaptcha.getResponse();
            if (response.length === 0) {
                // reCAPTCHA checkbox is not checked
                document.getElementById("login-submit").disabled = true;
            } else {
                // reCAPTCHA checkbox is checked
                document.getElementById("login-submit").disabled = false;
            }
        }
    </script>

</head>

<div class="row justify-content-center">
    <div class="col-lg-4">
        <section>
            <form id="account" method="post">
                <h2>Вход</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <br>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <br>
                <div class="g-recaptcha form-floating" id="recaptcha" data-sitekey="6Lfb3LYpAAAAAJ_PcSDPZC_eNy_2kfsr3xcc3g9Q" data-callback="recaptchaCallback">
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" disabled>Вход</button>
                </div>
            </form>
        </section>
    </div>
  
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

