				<p>Специализации / специалности: <b>@Model.Specialization</b></p>
			</div>
		</div>
	</div>
	<!-- /page -->
	<!-- Bootstrap core & Jquery -->
	<script src="vendor/jquery/jquery.min.js"></script>
