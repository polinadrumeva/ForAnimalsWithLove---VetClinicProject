@using ForAnimalsWithLove.ViewModels.Admins;
@model AdminHealthModel


<body id="top">

	<!-- ==== Page Content ==== -->
	<div class="page">
		<div class="container">
			<div class="row">
				<div class="col-lg-10 center">

					<div class="row bg-light-custom border-irregular1 block-padding text-center">

						<div>
							<h4>Здравно досие</h4>
							<div class="row">
								<div class="text-center">
									<ul class="list-unstyled pet-adopt-info">
										<li class="h7">Микрочип: <span>@(Model.Microchip ? "Да" : "Не")</span></li>
										<li class="h7">Номер на микрочип: <span>@Model.MicrochipNumber</span></li>
										<li class="h7">Първа ваксина: <span>@(Model.FirstVaccine ? "Да" : "Не")</span></li>
										<li class="h7">Втора ваксина: <span>@(Model.SecondVaccine ? "Да" : "Не")</span></li>
										<li class="h7">Трета ваксина: <span>@(Model.ThirdVaccine ? "Да" : "Не")</span></li>
										<li class="h7">Годишна ваксина: <span>@(Model.AnnualVaccine ? "Да" : "Не")</span></li>
										<li class="h7">Общо състояние: <span>@Model.GeneralCondition</span></li>
									</ul>
								</div>

								<!-- /div-->
							</div>
							<!-- /row-->

							<div class="text-center">
								<div id="accordion-1" class="accordion-cards">
									@foreach (var medical in Model.Medicals)
									{
										<partial name="_MedicalPartial" model="@medical" />
									}
								</div>

							</div>
						</div>
						<!-- /col-md -->
					</div>
					<hr />


				</div>
				<!-- /col-lg-->
			</div>
			<!-- /row-->
		</div>
		<!-- /container-->
	</div>
	<!-- /page -->

</body>
