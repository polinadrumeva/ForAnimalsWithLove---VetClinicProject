            </div>
            <!-- End Top bar -->
            <!-- Navbar Starts -->
            <div class="navbar container-fluid">
                <partial name="_LoginPartial" />
            </div>
            <!-- /navbar -->
        </nav>
        <!-- /nav -->
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- ==== footer ==== -->
    <footer class="text-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.png" style="block-size: 200px" alt="ForAnimalsWithLove">
                    </a>
                </div>
                <!--/ col-lg -->
                
