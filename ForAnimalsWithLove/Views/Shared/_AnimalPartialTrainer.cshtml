@using ForAnimalsWithLove.ViewModels.Admins;
@model AdminAnimalModel



<div class="adopt-card col-md-2 col-xl-6 res-margin">
	<div class="card bg-light-custom">
		<div class="thumbnail text-center">
			<!-- Image -->
			<img src="@Model.Photo" class="border-irregular1 img-fluid" alt="photo">
			<!-- Name -->
			<div class="caption-adoption">
				<h6 class="adoption-header">@Model.Name</h6>
				<!-- List -->
				<ul class="list-unstyled">
					<li><strong>Възраст:</strong> @Model.Age</li>
					<li><strong>Вид/Порода:</strong> @Model.KindOfAnimal / @Model.Breed</li>
					<li><strong>Собственик: </strong> @Model.OwnerName</li>
				</ul>
				<!-- Buttons -->
				<div class="text-center">
					<a class="btn btn-primary" asp-area="" asp-controller="Trainer" asp-action="AnimalDetails" asp-route-id="@Model.Id">Детайли/Добави</a>
				</div>

			</div>
		</div>
		<!-- /thumbnail -->
	</div>
	<!-- /card -->
</div>








