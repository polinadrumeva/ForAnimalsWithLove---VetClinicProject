@using ForAnimalsWithLove.ViewModels.Admins;
@model AdminHospitalModel

<div>
	<div class="row bg-light-custom border-irregular1 block-padding text-center">
		<h4>Болнично досие</h4>
		<div class="row">
			<div class="text-center">
				<ul class="list-unstyled pet-adopt-info">
					<li class="h7">Диагноза: <span>@Model.Diagnosis</span></li>
					<li class="h7">Дата на прием: <span>@Model.DateOfAcceptance.ToShortDateString()</span></li>
					<li class="h7">Дата на изписване: <span>@Model.DateOfDischarge.ToShortDateString()</span></li>
					<li class="h7">Провело се лечение: <span>@Model.Treatment</span></li>
					<li class="h7">Предписано лечение: <span>@Model.PrescribedTreatment</span></li>
				</ul>
			</div>
			<!-- /div-->
		</div>
		<!-- /row-->
	</div>
</div>