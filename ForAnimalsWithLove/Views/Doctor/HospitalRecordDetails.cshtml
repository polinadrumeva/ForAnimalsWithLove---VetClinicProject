@using ForAnimalsWithLove.ViewModels.Admins;
@model AdminHealthModel


<body id="top">

	<!-- ==== Page Content ==== -->
	<div class="page">
		<div class="container">
			<div class="row">
					<div class="text-center">
						<div id="accordion" class="accordion-cards">

					@foreach (var record in Model.HospitalRecords)
					{
						<partial name="_HospitalAdmPartial" model="@record" />
						<hr />
					}
						</div>
					</div>

				<div class="text-center col-md-10 col-xl-12">
					<a asp-controller="Doctor" asp-action="AddHospitalRecord" asp-route-id="@Model.Id" class="btn btn-primary"> + Добави болнично досие</a>
				</div>

			</div>
			<!-- /row-->
		</div>
		<!-- /container-->
	</div>
	<!-- /page -->

</body>
